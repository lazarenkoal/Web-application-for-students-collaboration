@{
    ViewBag.Title = "Дома в " + Model[0].University;
    int amountOfElemnts = Model.Count;
}
@model List<CocktionMVC.Models.DAL.House>
<h3 style="text-align: center">Дома в @Model[0].University</h3>
<br/>
<br/>
<div id="housesContainer" class ="row">
    @{
        int q1 = 0, q2 = 1, q3 = 2, q4 = 3;
        <div class="col-md-3">
            @while (q1 < amountOfElemnts)
            {
                <p style="font-weight: bold">@Model[q1].University</p>
                <p>Факультет: @Model[q1].Faculty</p>
                <p>Адрес: @Model[q1].Adress</p>
                <p>@Html.ActionLink("Хочу посмотреть", "GetCurrentAuctionHouse", "AuctionHouse", new {id = Model[q1].Id}, null)</p>
                <br/>
                q1 += 4;
            } 
        </div>
        <div class="col-md-3">
            @while (q2 < amountOfElemnts)
            {
