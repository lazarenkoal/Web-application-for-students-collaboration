<script type="text/javascript" src="~/Scripts/MyLib/Auction/CurrentAuction/btnsOnClickPrcsg.js"></script>
<script type="text/javascript" src="~/Scripts/MyLib/Auction/CurrentAuction/nodeProcessor.js"></script>
