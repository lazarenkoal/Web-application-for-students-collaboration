@{
    ViewBag.Title = "Index";
}
@using CocktionMVC.Models.DAL
@using CocktionMVC.Models.ViewModels
@model ProfileViewModel
<link rel="stylesheet" href="~/Content/UsersRelatedStyles/ProfileStyle.css"/>
<script src="~/Scripts/MyLib/Profile/opinionAdder.js"></script>
<div class="row">
    <br/>
    <!--Фотка и информация о пользователе-->
    <div class="col-md-3" style="align-items:flex-start">
        <!--Контейнер для аватарки-->
        <img src="~/Content/SiteImages/anonPhoto.jpg" class="img-thumbnail"/>
        <p>Ваша фотокарточка.</p>
    </div>
    <div class="col-md-2" id="userInformation">
        <!--Контейнер для информации-->
        <div id="userName">
            <!--Контейнер для имени пользователя-->
            <h4>@Model.Name @Model.Surname</h4>
        </div>
        <br/>
        <div id="userRates">
            <!--Контейнер для информации о пользователе-->
            <p><b>Рейтинг:</b> @Model.Rating</p>
            <p><b>Яиц: </b> @Model.EggsAmount</p>
            <p><b>Аукционов сделал:</b> @Model.AuctionsAmount</p>
            <p><b>Победил </b> 40 раз
            </p>
            <p><b>Ставок сделал: </b> @Model.ProductsAmount штук
            </p>
            <p><b>Вместе с нами: </b> @Model.DaysWithUsAmount дней
            </p>
        </div>
    </div>
    <div class="col-md-7" id="userLifePos">
        <h4>Жизненная позиция пользователя</h4>
        <div class="row" id="interests">
            <div class="col-md-3">
                <h4>Интерес #1</h4>
                <p>Тачки</p>
                <img src="~/Content/SiteImages/car.jpg" class="img-thumbnail"/>
            </div>
            <div class="col-md-3">
                <h4>Интерес #2</h4>
                <p>Бабки</p>
                <img src="~/Content/SiteImages/money.jpg" class="img-thumbnail" />
            </div>
            <div class="col-md-3">
                <h4>Интерес #3</h4>
                <p>Девушки</p>
                <img src="~/Content/SiteImages/girl.jpg" class="img-thumbnail" />
            </div>
            <div class="col-md-3">
                <h4>Интерес #4</h4>
                <p>Блэкджек</p>
                <img src="~/Content/SiteImages/blackjack.jpg" class="img-thumbnail" />
            </div>
        </div>
    </div>
</div>
<br />
<br />

<div class="row" id="subcribedHouses">
    <!--Дома, на которые подписан пользователь-->
    <h3 id="housesHeader">Житель следующих домов</h3>
    <div class="col-md-3">
        <p>Какой-то дом</p>
        <img src="~/Content/SiteImages/house1.jpg" class="img-responsive"/>
    </div>
    <div class="col-md-3">
        <p>Какой-то дом</p>
        <img src="~/Content/SiteImages/house1.jpg" class="img-responsive" />
    </div>
    <div class="col-md-3">
        <p>Какой-то дом</p>
        <img src="~/Content/SiteImages/house1.jpg" class="img-responsive" />
    </div>
    <div class="col-md-3">
        <p>Какой-то дом</p>
        <img src="~/Content/SiteImages/house1.jpg" class="img-responsive" />
    </div>
</div>

<br />
<br/>

<div class="row" id="usersAuctions">
    <!--Аукционы пользователя-->
    <h3 id="auctionHeader">Владелец прекрасных аукционов</h3>
    
</div>
<br />
<br/>

<div class="row" id="usersFeedback">
    <!--Отзывы о пользователе-->
    <div class="col-md-3" id="feedbackDescription">
        <p>
            Здесь можно разместить свой отзыв о данном пользователе. Если
            данный пользователь вас когда-либо обманывал, то напиши о нем свой плохой отзыв
            и заявите о своих недовольствах администрации. Мы разберемся и примем меры:)
            Все ради Вас!
        </p>
    </div>
    <div class="col-md-6" id="feedbackFormContainer">
        <h5 id="oppinionHeader">Мнения</h5>
        <div id="feedbackPosts"><!--Контейнер для сообщений -->
            @if (Model.Feeds.Count != 0)
            {
                foreach (UsersFeedback feed in Model.Feeds)
                {
                    <div class="feedbackPost">
                        <p class="postAuthor"><b>@feed.AuthorsName @feed.AuthorsSurname</b> cказал
                        </p>
                        <p>@feed.Message</p>
                    </div>
                    <br />
                }
            }
            else
            {
                <div class="feedbackPost" id="defaultFeedback">
                    <p class="postAuthor">
                        <b>Коки Кок</b> cказал
                    </p>
                    <p>К сожалению, никто еще не оставил отзыв об этом пользователе</p>
                </div>
                <br />
            }
        </div>
    </div>
    <div class="col-md-3">
        <p>Не надо стесняяяться!</p>
        <button>Наверх</button>
    </div>
</div>
