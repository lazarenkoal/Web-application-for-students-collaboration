@{
    ViewBag.Title = "Аукционы";
}
@using CocktionMVC.Models.DAL
@model List<Auction>
<h2>Аукционы</h2>
<script src="~/Scripts/Jquery/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/Jquery/jquery.signalR-2.2.0.min.js"></script>
<script src="~/signalr/hubs"></script>
<script src="~/Scripts/MyLib/Auction/Index/hubConnection.js"></script>
<div class="row">
    <div class="col-lg-6">
        @{
            if (Model.Count != 0)
            {
                using (Html.BeginForm())
                {
                    foreach (var i in Model)
                    {
                        <p>@i.SellProduct.Name</p>
                        <p>@i.SellProduct.Description</p>
                        <p>@i.EndTime</p>
                        <p>@Html.ActionLink("Хочу купить!", "CurrentAuction", "Auction", new { id = i.Id }, null)</p>
                        <img src="http://cocktion.com/Images/Thumbnails/@i.SellProduct.Photos.First().FileName" />
                    }
                }
            }
            else
            {
                <p>К сожалению, пока что никто ничего не продает :(</p>
                Html.ActionLink("Начать продавать:)", "Create");
            }
        }
    </div>
</div>