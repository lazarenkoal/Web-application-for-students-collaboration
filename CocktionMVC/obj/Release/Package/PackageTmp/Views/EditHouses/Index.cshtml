@{
    ViewBag.Title = "Index";
}
@using CocktionMVC.Models.DAL
@model List<House>
<script src="~/Scripts/Jquery/jquery-2.1.3.min.js"></script>
<script src="~/Scripts/MyLib/EditHouses/formVerifier.js"></script>
<script src="~/Scripts/MyLib/EditHouses/housesSender.js"></script>
<div class="row">
    <div class="col-lg-6">
        <div id="addHouseForm">
            <h3>Добавить новый дом</h3>
            Университет <br />
            <input type="text" id="university" /> <br />
            Факультет <br />
            <input type="text" id="faculty" /> <br />
            Адрес <br />
            <input type="text" id="adress" /> <br />
            <button id="addHouseBtn" class="btn btn-default" onclick="sendHouseToServer()" title="Жги, детка!">Добавляю</button>
        </div>
    </div>
    <div class="col-lg-6">
        <h3>Существующие дома</h3>
        <div id="houseList">
            @foreach (var item in Model)
            {
                <p>ВУЗ: @item.University, Факультет: @item.Faculty, Адрес: @item.Adress</p>
            }
        </div>
    </div>
</div>
